<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="accent_primary">#FFFFFF</color>
    <color name="accent_secondary">#DDDDDD</color>
    <color name="accent_subtle">#555555</color>
    <color name="black">#000000</color>
    <color name="gray_200">#E5E7EB</color>
    <color name="gray_300">#D1D5DB</color>
    <color name="gray_400">#9CA3AF</color>
    <color name="gray_600">#222222</color>
    <color name="gray_700">#111111</color>
    <color name="gray_800">#050505</color>
    <color name="gray_900">#000000</color>
    <color name="red_500">#EF4444</color>
    <color name="surface_elevated">#111111</color>
    <color name="surface_primary">#000000</color>
    <color name="surface_secondary">#000000</color>
    <color name="text_primary">#FFFFFF</color>
    <color name="text_secondary">#DDDDDD</color>
    <color name="text_tertiary">#AAAAAA</color>
    <color name="white">#FFFFFF</color>
    <style name="ActionBar.Dark" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/surface_primary</item>
        <item name="titleTextStyle">@style/ActionBarTitle.Dark</item>
    </style>
    <style name="ActionBarTitle.Dark" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="Theme.VoiceInputAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/surface_primary</item>
        <item name="colorOnPrimary">@color/accent_primary</item>
        
        
        <item name="colorSecondary">@color/surface_secondary</item>
        <item name="colorOnSecondary">@color/accent_primary</item>
        
        
        <item name="colorAccent">@color/accent_primary</item>
        <item name="colorControlActivated">@color/accent_primary</item>
        <item name="colorControlHighlight">@color/accent_subtle</item>
        <item name="colorControlNormal">@color/accent_secondary</item>
        
        
        <item name="android:statusBarColor">@color/surface_primary</item>
        <item name="android:windowBackground">@color/surface_primary</item>
        <item name="android:colorBackground">@color/surface_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/text_primary</item>
        
        
        <item name="android:forceDarkAllowed" ns1:targetApi="29">false</item>
    </style>
    <style name="Theme.VoiceInputAssistant.Overlay" parent="Theme.VoiceInputAssistant">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Theme.VoiceInputAssistant.Settings" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/surface_primary</item>
        <item name="colorOnPrimary">@color/accent_primary</item>
        
        
        <item name="colorSecondary">@color/surface_secondary</item>
        <item name="colorOnSecondary">@color/accent_primary</item>
        
        
        <item name="colorAccent">@color/accent_primary</item>
        <item name="colorControlActivated">@color/accent_primary</item>
        <item name="colorControlHighlight">@color/accent_subtle</item>
        <item name="colorControlNormal">@color/accent_secondary</item>
        
        
        <item name="android:statusBarColor">@color/surface_primary</item>
        <item name="android:windowBackground">@color/surface_primary</item>
        <item name="android:colorBackground">@color/surface_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/text_primary</item>
        
        
        <item name="actionBarStyle">@style/ActionBar.Dark</item>
        
        
        <item name="android:forceDarkAllowed" ns1:targetApi="29">false</item>
    </style>
</resources>